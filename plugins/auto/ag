
# vi: ft=zsh

cmd=$0

# Use `rg` if available
if (rg --help &>/dev/null); then
	alias ag=rg
	unfunction $cmd
	return
fi

if ! (hash $cmd &>/dev/null); then
	if [[ -d /arm/tools ]]; then
		module load greer/silversearcher
	else
		echo "ag not installed, please run:"
		echo "sudo apt-get install silversearcher-ag"
	fi
fi
if (hash $cmd &>/dev/null); then
	unfunction $cmd
	$cmd $@
else
	echo "ag not installed, please run:"
	echo "sudo apt-get install silversearcher-ag"
fi

