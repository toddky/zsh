#!/usr/bin/env bash

# Check usage
usage="Usage: git ${0##*git-} <pattern>"
query="$@"
[[ -z $query ]] && { echo $usage; exit 2; }

# Run git grep
result=$(git grep -n "$query" | \
	fzf --height 40% --tiebreak=length --reverse --exact --query="$query")

# Check exit code
ret=$?
[[ $ret != 0 ]] && exit $ret

# Open result with vim
read -r file line <<<$(echo $result | awk -v FS=: '{print $1, $2}')
vim +$line $file

